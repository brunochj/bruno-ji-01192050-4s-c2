<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaSucesso">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cachorro1"
        android:textSize="30sp"
        android:id="@+id/tv_cachorro1"
        android:textColor="#000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cachorro2"
        android:textSize="30sp"
        android:id="@+id/tv_cachorro2"
        app:layout_constraintTop_toBottomOf="@+id/tv_cachorro1"
        android:layout_marginTop="20dp"
        android:textColor="#000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/preco_total"
        android:textSize="20sp"
        android:id="@+id/tv_precoTotal"
        app:layout_constraintTop_toBottomOf="@+id/tv_cachorro2"
        android:layout_marginTop="20dp"
        android:textColor="#000"/>




</androidx.constraintlayout.widget.ConstraintLayout>