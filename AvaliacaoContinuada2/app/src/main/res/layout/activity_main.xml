<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/coloque_id_1"
        android:inputType="number"
        android:id="@+id/et_id1"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/coloque_id_2"
        android:inputType="number"
        android:id="@+id/et_id2"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/et_id1"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/comprar_cachorro"
        android:id="@+id/btn_comprar"
        app:layout_constraintTop_toBottomOf="@+id/et_id2"
        android:layout_marginTop="20dp"
        android:onClick="comprar"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/cachorro_feliz_1"
        app:layout_constraintTop_toBottomOf="@+id/btn_comprar"
        android:id="@+id/iv_cachorro1"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/cachorro_feliz_2"
        app:layout_constraintTop_toBottomOf="@+id/btn_comprar"
        app:layout_constraintLeft_toRightOf="@+id/iv_cachorro1"
        android:layout_marginLeft="20dp"
        android:id="@+id/iv_cachorro2"/>


</androidx.constraintlayout.widget.ConstraintLayout>